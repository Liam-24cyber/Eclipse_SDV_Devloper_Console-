{
  "info": {
    "name": "SDV E2E Demo API",
    "description": "Complete E2E workflow automation endpoints for SDV Developer Console",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:9191/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "System Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:9191/api/status",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "status"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "E2E Workflow",
      "item": [
        {
          "name": "ðŸŽ¬ RUN COMPLETE E2E WORKFLOW",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scenarioName\": \"Postman E2E Test {{$timestamp}}\",\n  \"scenarioDescription\": \"End-to-end workflow triggered from Postman\"\n}"
            },
            "url": {
              "raw": "http://localhost:9191/api/e2e/run",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "e2e", "run"]
            },
            "description": "Runs the complete E2E workflow:\n1. Creates scenario\n2. Verifies in database\n3. Gets track\n4. Creates simulation\n5. Publishes event to RabbitMQ\n6. Waits for webhook processing\n7. Checks webhook deliveries\n8. Returns summary"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Step 1 - Create Scenario",
      "item": [
        {
          "name": "Create Scenario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.scenarioId) {",
                  "    pm.environment.set('scenarioId', jsonData.data.scenarioId);",
                  "    pm.environment.set('scenarioName', jsonData.data.name);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Postman Demo Scenario {{$timestamp}}\",\n  \"description\": \"Created via Postman API call\",\n  \"type\": \"CAN\"\n}"
            },
            "url": {
              "raw": "http://localhost:9191/api/scenario/create",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "scenario", "create"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Step 2 - Get Tracks",
      "item": [
        {
          "name": "Get All Tracks",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.length > 0) {",
                  "    pm.environment.set('trackId', jsonData.data[0].id);",
                  "    pm.environment.set('trackName', jsonData.data[0].name);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:9191/api/tracks",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "tracks"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Step 3 - Create Simulation",
      "item": [
        {
          "name": "Create Simulation",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.simulationId) {",
                  "    pm.environment.set('simulationId', jsonData.data.simulationId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scenarioId\": \"{{scenarioId}}\",\n  \"name\": \"Postman Simulation {{$timestamp}}\",\n  \"status\": \"PENDING\"\n}"
            },
            "url": {
              "raw": "http://localhost:9191/api/simulation/create",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "simulation", "create"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Step 4 - Publish Event",
      "item": [
        {
          "name": "Publish SCENARIO_CREATED Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventType\": \"SCENARIO_CREATED\",\n  \"scenarioId\": \"{{scenarioId}}\",\n  \"data\": {\n    \"name\": \"{{scenarioName}}\",\n    \"description\": \"Event published from Postman\",\n    \"status\": \"CREATED\",\n    \"type\": \"CAN\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:9191/api/event/publish",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "event", "publish"]
            }
          },
          "response": []
        },
        {
          "name": "Publish SCENARIO_UPDATED Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventType\": \"SCENARIO_UPDATED\",\n  \"scenarioId\": \"{{scenarioId}}\",\n  \"data\": {\n    \"name\": \"{{scenarioName}}\",\n    \"description\": \"Updated from Postman\",\n    \"status\": \"UPDATED\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:9191/api/event/publish",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "event", "publish"]
            }
          },
          "response": []
        },
        {
          "name": "Publish SIMULATION_STARTED Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventType\": \"SIMULATION_STARTED\",\n  \"scenarioId\": \"{{scenarioId}}\",\n  \"data\": {\n    \"simulationId\": \"{{simulationId}}\",\n    \"name\": \"Postman Simulation\",\n    \"status\": \"STARTED\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:9191/api/event/publish",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "event", "publish"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Step 5 - Check Results",
      "item": [
        {
          "name": "Get Webhook Deliveries",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:9191/api/webhooks/deliveries?limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "webhooks", "deliveries"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "eventType",
                  "value": "SCENARIO_CREATED",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Scenarios from Database",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:9191/api/database/scenarios?limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "database", "scenarios"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get RabbitMQ Queue Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:9191/api/rabbitmq/queues",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9000",
              "path": ["api", "rabbitmq", "queues"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Direct GraphQL Calls",
      "item": [
        {
          "name": "Create Scenario via GraphQL",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"mutation { createScenario(input: { name: \\\"Postman GraphQL Test\\\", description: \\\"Direct GraphQL call\\\", type: CAN, status: CREATED }) { id name status createdAt } }\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/graphql",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["graphql"]
            }
          },
          "response": []
        },
        {
          "name": "Query All Scenarios",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"{ scenarios { id name description status createdAt } }\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/graphql",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["graphql"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:9191",
      "type": "string"
    },
    {
      "key": "graphqlUrl",
