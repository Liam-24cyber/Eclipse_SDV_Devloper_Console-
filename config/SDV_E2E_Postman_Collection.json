{
	"info": {
		"_postman_id": "sdv-e2e-simulation",
		"name": "SDV E2E Simulation API",
		"description": "Complete E2E testing collection for Software Defined Vehicle Developer Console",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "üöÄ Run Complete E2E Simulation",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "http://localhost:9191/api/run-simulation",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "9191",
					"path": [
						"api",
						"run-simulation"
					]
				},
				"description": "Triggers the complete E2E workflow:\n1. Create scenario\n2. Create simulation\n3. Publish to RabbitMQ\n4. Process webhooks\n5. Verify data flow\n\nExpected duration: 30-45 seconds"
			},
			"response": []
		},
		{
			"name": "ü©∫ Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:9191/health",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "9191",
					"path": [
						"health"
					]
				},
				"description": "Quick health check to verify the API server is running"
			},
			"response": []
		},
		{
			"name": "üìä System Status",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:9191/api/status",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "9191",
					"path": [
						"api",
						"status"
					]
				},
